<% case @hla1.type %>
<% when 'LocusA' %>
  <% if @chromatid == 1 then %>
  <%= f.select :allele, @alleles1, { }, { id: "locus_a_allele1" } %>
  <% else %>
  <%= f.select :dallele, @alleles2, { }, { id: "locus_a_allele2" } %>
  <% end %>
